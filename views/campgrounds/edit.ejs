
<%- include('../partials/header.ejs') %>   

<h1 class = "text-center">Edit <%= campground.name %> Post </h1>
<div class = "container " style = "width:30%;">

    <form action = "/campgrounds/<%= campground._id %>/?_method=PUT " method = "POST">
        <div class="form-group text-center">
            <input type="text" name = "campground[name]" class="form-control" aria-describedby="emailHelp" placeholder="name" value="<%= campground.name %>">
            <input type="text" name = "campground[image]" class="form-control"  placeholder="image URL" value="<%= campground.image %>">
            <input type="text" name = "campground[description]" class="form-control"  placeholder="description" value="<%= campground.description %>">
            <input type="number" id="quantity" name="campground[price]" min="0.01" step="0.01" class="form-control" placeholder="price" value="<%= campground.price %>">
        </div>
        <button type="submit" class="btn btn-primary btn-block">Done</button>
    </form>
    <a href = "/campgrounds" >Back</a>
</div>


<%- include('../partials/footer.ejs') %>   

