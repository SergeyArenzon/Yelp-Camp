<%- include('../partials/header.ejs') %>   

<h1 class = "text-center">Edit Comment</h1>
<div class = "container " style = "width:30%;">
    <form action = "/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group text-center">    
            <input type="text" name = "text" class="form-control"  placeholder="Text" value="<%= comment.text %> ">
        </div>

        <button type="submit" class="btn btn-primary btn-block">Done</button>
    </form>

    <a href = "/campgrounds/<%= campground_id %>"> Back</a>
</div>


